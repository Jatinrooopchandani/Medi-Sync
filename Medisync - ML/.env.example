# Flask Application Configuration
FLASK_APP=main.py
FLASK_ENV=production
FLASK_DEBUG=False

# Server Configuration
HOST=127.0.0.1  # Only listen on localhost when behind reverse proxy
PORT=8080

# Security Configuration
MAX_CONTENT_LENGTH=1048576  # 1MB in bytes
RATE_LIMIT_DEFAULT="200 per day"
RATE_LIMIT_HEALTH="60 per minute"

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT="[%(asctime)s] %(levelname)s in %(module)s: %(message)s"
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=10

# Resource Limits
MAX_MEMORY_PERCENT=90
MIN_FREE_DISK_GB=2
MODEL_MAX_AGE_DAYS=90

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=60  # seconds
MONITORING_RETENTION_DAYS=30

# Alert Configuration
ALERT_EMAIL=admin@example.com
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=alerts@example.com
# SMTP_PASSWORD=  # Set this in the actual .env file, not in this example

# Slack Alerts (optional)
# SLACK_WEBHOOK_URL=  # Set this in the actual .env file if using Slack
SLACK_CHANNEL="#monitoring"

# Feature Flags
ENABLE_MODEL_VALIDATION=true
ENABLE_REQUEST_VALIDATION=true
ENABLE_RATE_LIMITING=true
ENABLE_MONITORING=true

# Cache Configuration
CACHE_TYPE=filesystem
CACHE_DIR=/tmp/medisync_cache
CACHE_DEFAULT_TIMEOUT=300  # 5 minutes

# Model Configuration
MODEL_TIMEOUT=30  # seconds
MODEL_BATCH_SIZE=32
MODEL_MAX_QUEUE_SIZE=100

# Do not modify these in production
TESTING=False
PROPAGATE_EXCEPTIONS=False